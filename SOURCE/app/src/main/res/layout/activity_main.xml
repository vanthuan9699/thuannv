<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffccc"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:scaleType="centerCrop"
            android:layout_width="105dp"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
             />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:text="Name"
                android:textColor="#0A0A0A"
                android:textSize="20sp"
                android:textStyle="bold"


                />

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="phone"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/red_round_bg1"
                android:clickable="true"
                android:text="SỬA THÔNG TIN"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/red_round_bg2"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_gd_buttom"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_gd" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/iv1"
                android:layout_centerInParent="true"

                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/iv1"
                android:text="Lịch sử giao dịch"
                android:textColor="#090808"

                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/ic_ten" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_hd_buttom"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_hd" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/iv3"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/iv3"
                android:text="Hỏi đáp"
                android:textColor="#090808"

                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/ic_ten" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_hdsd_buttom"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_hdsd" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/iv5"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/iv5"
                android:text="Hướng dẫn sử dụng"
                android:textColor="#090808"

                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/ic_ten" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_exit_buttom"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/iv7"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_exit" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv7"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/iv7"
                android:text="Đăng xuất"
                android:textColor="#090808"

                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv8"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/ic_ten" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>